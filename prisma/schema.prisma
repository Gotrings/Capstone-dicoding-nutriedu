generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  birthDate    DateTime
  residence    String
  email        String    @unique
  password     String
  analyses     Analisa[] 
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}


model Analisa {
 id             Int       @id @default(autoincrement())
  name           String
  gender         String
  age            Int
  weight         Float
  height         Float
  status         Status
  analysisDate   DateTime
  userId         Int
  user           User      @relation(fields: [userId], references: [id])
  createdAt      DateTime  @default(now())
}



enum Status {
  NORMAL
  STUNTED
  TINGGI
  SEVERELY_STUNTED
}
 